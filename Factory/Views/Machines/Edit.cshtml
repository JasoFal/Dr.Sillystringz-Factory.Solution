@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit</h2>

<h4>Edit this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName)
  @Html.EditorFor(model => model.MachineName)
  <p>@Html.ValidationMessageFor(model => model.MachineName, "", new { @class = "text-danger", @style = "font-weight: 400;" })</p>
  @Html.LabelFor(model => model.MachineDetails)
  @Html.EditorFor(model => model.MachineDetails)
  <p>@Html.ValidationMessageFor(model => model.MachineDetails, "", new { @class = "text-danger", @style = "font-weight: 400;" })</p>

  <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to list", "Index")</p>